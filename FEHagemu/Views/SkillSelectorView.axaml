<UserControl
    x:Class="FEHagemu.Views.SkillSelectorView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FEHagemu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:views="clr-namespace:FEHagemu.Views"
    xmlns:vm="using:FEHagemu.ViewModels"
    Name="SkillSelectDialog"
    MaxWidth="500"
    MaxHeight="800"
    d:DesignHeight="500"
    d:DesignWidth="800"
    x:DataType="vm:SkillSelectorViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="FilterIconTemplate" x:DataType="vm:FilterItemBase">
            <ToggleButton
                Width="40"
                Height="40"
                Padding="2"
                CornerRadius="4"
                IsChecked="{Binding IsSelected}">
                <Image
                    Width="32"
                    Height="32"
                    Source="{Binding Icon}" />
            </ToggleButton>
        </DataTemplate>

        <ItemsPanelTemplate x:Key="WrapPanelTemplate">
            <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" />
        </ItemsPanelTemplate>
    </UserControl.Resources>
    <Grid RowDefinitions="Auto, *">
        <StackPanel Margin="10" Spacing="2">
            <TextBox
                Name="SearchBar"
                HorizontalAlignment="Stretch"
                Classes="ClearButton"
                InnerLeftContent="Name"
                Text="{Binding SearchText}" />
            <ItemsControl
                ItemTemplate="{StaticResource FilterIconTemplate}"
                ItemsPanel="{StaticResource WrapPanelTemplate}"
                ItemsSource="{Binding WeaponFilters}" />
            <ItemsControl
                ItemTemplate="{StaticResource FilterIconTemplate}"
                ItemsPanel="{StaticResource WrapPanelTemplate}"
                ItemsSource="{Binding MoveFilters}" />
            <u:SelectionList
                HorizontalAlignment="Center"
                ItemsSource="{Binding SlotFilters}"
                SelectedItem="{Binding SelectedSlot}"
                SelectionChanged="">
                <u:SelectionList.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </u:SelectionList.ItemsPanel>
                <u:SelectionList.ItemTemplate>
                    <DataTemplate>
                        <Image Width="24" Source="{Binding Icon}" />
                    </DataTemplate>
                </u:SelectionList.ItemTemplate>
            </u:SelectionList>
            <Grid HorizontalAlignment="Stretch" ColumnDefinitions="24,24,*,24">
                <TextBlock VerticalAlignment="Center" Text="SP: " />
                <TextBlock
                    Grid.Column="1"
                    Width="24"
                    VerticalAlignment="Center"
                    Text="{Binding #SPRangeSlider.LowerValue}" />
                <u:RangeSlider
                    Name="SPRangeSlider"
                    Grid.Column="2"
                    HorizontalAlignment="Stretch"
                    IsSnapToTick="True"
                    LowerValue="{Binding MinSp}"
                    Maximum="500"
                    Minimum="0"
                    TickPlacement="Outside"
                    Ticks="0,200,240,300,500"
                    UpperValue="{Binding MaxSp}" />
                <TextBlock
                    Grid.Column="3"
                    Width="24"
                    Margin="12,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Text="{Binding #SPRangeSlider.UpperValue}" />

            </Grid>
            <StackPanel
                HorizontalAlignment="Center"
                DockPanel.Dock="Top"
                Orientation="Horizontal">
                <CheckBox
                    Height="36"
                    Padding="4"
                    Command="{Binding ApplyFiltersCommand}"
                    Content="专属"
                    IsChecked="{Binding IsExclusive}"
                    IsThreeState="True"
                    Theme="{DynamicResource CardCheckBox}" />
                <CheckBox
                    Height="36"
                    Padding="4"
                    Command="{Binding ApplyFiltersCommand}"
                    Content="锻造"
                    IsChecked="{Binding IsRefined}"
                    IsThreeState="True"
                    Theme="{DynamicResource CardCheckBox}" />

            </StackPanel>
        </StackPanel>
        <ListBox
            Name="SkillList"
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            ItemsSource="{Binding FilteredSkills}"
            SelectedItem="{Binding SelectedSkill}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border
                        HorizontalAlignment="Stretch"
                        BorderBrush="Black"
                        BorderThickness="1"
                        BoxShadow="inset 3 3 10 0 DarkGray"
                        CornerRadius="3">
                        <Grid HorizontalAlignment="Stretch" ColumnDefinitions="Auto,*,Auto,Auto">
                            <Image
                                Grid.Column="0"
                                Height="36"
                                Source="{Binding Icon}" />
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                FontSize="24"
                                FontWeight="Bold"
                                Text="{Binding Name}" />
                        </Grid>
                        <ToolTip.Tip>
                            <views:SkillToolTipPanel />
                        </ToolTip.Tip>
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem
                                    Command="{Binding #SkillSelectDialog.((vm:SkillSelectorViewModel)DataContext).ExportCommand}"
                                    CommandParameter="{Binding}"
                                    Header="Export Skill" />
                                <MenuItem
                                    Command="{Binding #SkillSelectDialog.((vm:SkillSelectorViewModel)DataContext).DeleteCommand}"
                                    CommandParameter="{Binding}"
                                    Header="Delete Skill" />
                                <MenuItem
                                    Command="{Binding #SkillSelectDialog.((vm:SkillSelectorViewModel)DataContext).ShowSameAbilitySkillsCommand}"
                                    CommandParameter="{Binding}"
                                    Header="Show skills with same ability id" />
                            </ContextMenu>
                        </Border.ContextMenu>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

    </Grid>
</UserControl>
