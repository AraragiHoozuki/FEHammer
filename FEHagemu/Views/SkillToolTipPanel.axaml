<UserControl
    x:Class="FEHagemu.Views.SkillToolTipPanel"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:views="clr-namespace:FEHagemu.Views"
    xmlns:vm="using:FEHagemu.ViewModels"
    Name="SkillTooltipPanel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:SkillViewModel"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Panel VerticalAlignment="Center">
                <Image
                    Width="24"
                    VerticalAlignment="Center"
                    Source="{Binding Icon}" />
                <TextBlock
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    FontSize="12"
                    Foreground="Aqua"
                    IsVisible="{Binding ShowExNumberQ}"
                    Text="{Binding ExNumber}" />
            </Panel>


            <TextBlock
                Margin="6,0,0,0"
                VerticalAlignment="Center"
                FontSize="18"
                Text="{Binding Name}" />
        </StackPanel>


        <TextBlock Margin="0,6,0,0" Text="{Binding Description}" />
        <TextBlock
            Margin="0,4,0,0"
            Foreground="GreenYellow"
            Text="{Binding RefineDescription}" />
        <TextBlock
            Margin="0,4,0,0"
            Classes="Danger H1"
            Text="无法装备:" />
        <ItemsControl ItemsSource="{Binding NotEquippables}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Image
                        Width="24"
                        Height="24"
                        Source="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </StackPanel>

</UserControl>
