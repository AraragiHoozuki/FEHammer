<UserControl
    x:Class="FEHagemu.Views.PersonSelectorView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:FEHagemu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:views="clr-namespace:FEHagemu.Views"
    xmlns:vm="using:FEHagemu.ViewModels"
    Name="PersonSelectorDialog"
    MaxWidth="500"
    MaxHeight="800"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:PersonSelectorViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="FilterIconTemplate" x:DataType="vm:FilterItemBase">
            <ToggleButton
                Width="40"
                Height="40"
                Padding="2"
                CornerRadius="4"
                IsChecked="{Binding IsSelected}">
                <Image
                    Width="32"
                    Height="32"
                    Source="{Binding Icon}" />
            </ToggleButton>
        </DataTemplate>

        <ItemsPanelTemplate x:Key="WrapPanelTemplate">
            <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" />
        </ItemsPanelTemplate>
    </UserControl.Resources>
    <Grid RowDefinitions="Auto, *">
        <StackPanel Margin="10" Spacing="2">
            <ComboBox
                HorizontalAlignment="Center"
                Classes="ClearButton"
                ItemsSource="{Binding Versions}"
                PlaceholderText="Version"
                SelectedItem="{Binding SelectedVersion}" />

            <ItemsControl
                ItemTemplate="{StaticResource FilterIconTemplate}"
                ItemsPanel="{StaticResource WrapPanelTemplate}"
                ItemsSource="{Binding WeaponFilters}" />

            <ItemsControl
                ItemTemplate="{StaticResource FilterIconTemplate}"
                ItemsPanel="{StaticResource WrapPanelTemplate}"
                ItemsSource="{Binding MoveFilters}" />

            <Border
                Padding="5"
                HorizontalAlignment="Center"
                Theme="{StaticResource RadioButtonGroupBorder}">
                <ItemsControl
                    ItemTemplate="{StaticResource FilterIconTemplate}"
                    ItemsPanel="{StaticResource WrapPanelTemplate}"
                    ItemsSource="{Binding SpecialFilters}" />
            </Border>

        </StackPanel>

        <ListBox
            Name="PersonList"
            Grid.Row="1"
            ItemsSource="{Binding FilteredPersons}"
            SelectedItem="{Binding SelectedPerson}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border
                        BorderBrush="Black"
                        BorderThickness="2"
                        BoxShadow="inset 3 3 10 0 DarkGray"
                        CornerRadius="3">
                        <Border.ContextMenu>
                            <ContextMenu>
                                <MenuItem
                                    Command="{Binding #PersonSelectorDialog.((vm:PersonSelectorViewModel)DataContext).ShowSameCharactersCommand}"
                                    CommandParameter="{Binding}"
                                    Header="Show Same Characters" />
                                <MenuItem
                                    Command="{Binding #PersonSelectorDialog.((vm:PersonSelectorViewModel)DataContext).ExportCommand}"
                                    CommandParameter="{Binding}"
                                    Header="Export" />
                                <MenuItem
                                    Command="{Binding #PersonSelectorDialog.((vm:PersonSelectorViewModel)DataContext).DeleteCommand}"
                                    CommandParameter="{Binding}"
                                    Header="Delete Person" />
                            </ContextMenu>

                        </Border.ContextMenu>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel.Styles>
                                <Style Selector="Image">
                                    <Setter Property="Height" Value="36" />
                                </Style>
                            </StackPanel.Styles>
                            <Image Source="{Binding Face^}" />
                            <Image Source="{Binding WeaponIcon}" />
                            <Image Source="{Binding MoveIcon}" />


                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="24"
                                FontWeight="Bold"
                                Text="{Binding Name}" />
                            <ItemsControl ItemsSource="{Binding TraitIcons}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Image
                                            Width="32"
                                            Height="32"
                                            Margin="2"
                                            Source="{Binding}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                            </ItemsControl>


                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>

</UserControl>
