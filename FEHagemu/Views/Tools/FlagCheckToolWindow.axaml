<Window
    x:Class="FEHagemu.Views.Tools.FlagCheckToolWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:vm="using:FEHagemu.ViewModels.Tools"
    Title="Flag Selector"
    Width="400"
    Height="600"
    d:DesignHeight="600"
    d:DesignWidth="400"
    x:DataType="vm:FlagCheckToolViewModel"
    Icon="/Assets/favicon.ico"
    mc:Ignorable="d">

    <Grid RowDefinitions="Auto, *">
        <StackPanel
            Grid.Row="0"
            Margin="10"
            Spacing="10">

            <ComboBox
                HorizontalAlignment="Stretch"
                ItemsSource="{Binding FlagTypes}"
                PlaceholderText="选择 Flag 类型..."
                SelectedItem="{Binding SelectedFlagType}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock
                Classes="H6"
                Text="Value:"
                Theme="{StaticResource TitleTextBlock}" />
            <u:NumericUIntUpDown Minimum="0" Value="{Binding CurrentValue}" />
            <u:Divider Content="Flags" />
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="10">
            <ItemsControl ItemsSource="{Binding Flags}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox
                            Margin="0,2"
                            Content="{Binding Name}"
                            IsChecked="{Binding IsChecked}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
